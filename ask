#!/usr/bin/env python3
import sys
import subprocess

if len(sys.argv) < 2:
    print("❌ اكتب السؤال بعد ask")
    sys.exit(1)

# الأمر ده هيخلي phi يرد بسرعة، التعليمات بالإنجليزي عشان النموذج يفهم
question = "Answer briefly and clearly:\n" + " ".join(sys.argv[1:])

subprocess.run(
    ["ollama", "run", "phi"],
    input=question + "\n",
    text=True
)
